{
  "name": "api",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsc && tsc-alias",
    "check-types": "tsc --noEmit",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "bun run --hot src/index.ts",
    "deploy": "wrangler deploy",
    "start": "bun run dist/src/index.js"
  },
  "dependencies": {
    "zod": "^3.25.16",
    "@orpc/server": "^1.4.1",
    "@orpc/client": "^1.4.1",
    "hono": "^4.7.6"
  },
  "devDependencies": {
    "tsc-alias": "^1.8.11",
    "typescript": "^5.8.2",
    "@types/bun": "^1.2.6"
  }
}
